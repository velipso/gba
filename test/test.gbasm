// GBA header
b @main
.logo
.title "Game"    // game title, up to 12 characters
.u8 "CAA"        // game code
.u8 "E"          // (D)eutsch (E)nglish (F)rench (I)talian (J)apanese Euro(P)ean (S)panish
.u8 "99"         // maker code
.u16 150, 0, 0, 0, 0
.u8 0            // software version
.crc
.u16 0

@main:

// set REG_DISPCNT to 0
mov r0, #0x04000000
mov r1, #0x0
str r1, [r0]

// set color 0 to red
mov r0, #0x05000000
mov r1, #0x1f
str r1, [r0]

// infinite loop
@loop: b @loop
