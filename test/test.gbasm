// GBA header
b @main
.logo
.title "Test"
.u8 "CAAE99"
.u16 150, 0, 0, 0, 0
.u8 0
.crc
.u16 0

@main:

// set REG_DISPCNT to 0
mov r0, #0x04000000
mov r1, #0x0
str r1, [r0]

// set color 0 to green
mov r0, #0x05000000
mov r1, #0x3e0
str r1, [r0]

// infinite loop
@loop: b @loop
